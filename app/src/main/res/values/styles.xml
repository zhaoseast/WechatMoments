<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="colorPrimary">@color/color_after</item>
        <item name="colorPrimaryDark">@color/color_after</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="bg_style">
        <item name="android:background">@color/color_f5f5f5</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:clipToPadding">false</item>
    </style>
    <style name="image_style">
        <item name="android:layout_width">@dimen/dimen_36dp</item>
        <item name="android:layout_height">@dimen/dimen_36dp</item>
        <item name="android:maxWidth">@dimen/dimen_40dp</item>
        <item name="android:maxHeight">@dimen/dimen_40dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="tablayouttextstyle">
        <item name="android:textSize">@dimen/textsize_x20</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>
